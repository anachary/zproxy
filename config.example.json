{
  "listen_address": "0.0.0.0",
  "listen_port": 8080,
  "routes": [
    {
      "path": "/api/users",
      "upstream": "http://users-service:8080",
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "middleware": ["jwt", "ratelimit"]
    },
    {
      "path": "/api/products",
      "upstream": "http://products-service:8080",
      "methods": ["GET"],
      "middleware": ["cache"]
    },
    {
      "path": "/api/public",
      "upstream": "http://public-service:8080",
      "methods": ["GET"],
      "middleware": []
    }
  ],
  "tls": {
    "enabled": false,
    "cert_path": "/path/to/cert.pem",
    "key_path": "/path/to/key.pem",
    "domain_certs": [
      {
        "domain": "example.com",
        "cert_path": "/path/to/example.com.cert.pem",
        "key_path": "/path/to/example.com.key.pem"
      }
    ]
  },
  "middleware": {
    "rate_limit": {
      "enabled": true,
      "requests_per_minute": 100
    },
    "auth": {
      "enabled": true,
      "jwt_secret": "your-secret-key"
    },
    "cache": {
      "enabled": true,
      "ttl_seconds": 300
    }
  }
}
